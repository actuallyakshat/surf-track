{
  "manifest_version": 3,
  "name": "Surf Track",
  "version": "1.1.0",
  "description": "A browser extension that tracks the time you spend on the web.",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "windows",
    "alarms",
    "unlimitedStorage",
    "idle"
  ]
}
